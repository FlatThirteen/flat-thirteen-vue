body
  font-family: primary-font;
  font-size: 14px;
  margin: 0;

h1, h2, h3, h4, h5, h6, p
  margin: 0;
  padding: 0;

h1
  font-family: primary-font;
  font-size: 4vw;
  font-weight: 600;
  letter-spacing: -0.02em;
  margin-top: 1.4vw;
  margin-bottom: 1vw;

h3
  font-family: primary-font;
  font-size: 2vw;
  font-weight: 400;

pre
  font-family: primary-font;
  font-size: 14px;
  white-space: pre-wrap;
  word-wrap: break-word;

p
  font-size: 14px;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0;
  margin-bottom: 0;

a
  font-weight: 500;

input
  font-family: primary-font;
  font-size: 14px;

::-webkit-scrollbar {
  display: none;
}
