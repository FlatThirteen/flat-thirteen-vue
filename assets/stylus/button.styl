button-height = 60px;

toggle-color(class, color)
  {class}
    color: color;
    border-color: color;

    &.active
      background-color: color;

.button
  cursor: pointer;
  display: inline-block;
  height: button-height;
  text-align: center;
  user-select: none;
  vertical-align: top;
  width: button-height;
  transition: filter 250ms;

  &.disabled
    cursor: default;

  &:hover:not(:active):not(.disabled)
    shadow(#888);

.toggle
  background-color: white;
  border: solid 1px;
  cursor: pointer;
  padding: 5px;
  margin: 5px;
  user-select: none;
  transition: filter 250ms;

  &.active
    color: white !important;

  &:hover
    shadow(#888, 2px);
